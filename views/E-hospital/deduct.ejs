    <div class="container" style="margin: 200px auto">
      <h1>Update Drug Quantity</h1>
      <form method="post" action="/ehospital/deduct/update">
        <label for="drug-id">Drug ID:</label>
        <input
          type="text"
          id="drug-id"
          name="drugId"
          placeholder="Enter Drug ID"
          required
        />
        <label for="quantity">Quantity:</label>
        <input
          type="text"
          id="quantity"
          name="quantity"
          placeholder="Enter Quantity"
          required
        />
        <input type="submit" value="Deduct!" />
      </form>
      <div class="card">
